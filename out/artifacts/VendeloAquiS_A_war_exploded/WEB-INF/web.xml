<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>registrarProveedor</servlet-name>
        <servlet-class>webapp.RegistrarProveedor</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrarProveedor</servlet-name>
        <url-pattern>/registrarProveedor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>webapp.Ingresar</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productos</servlet-name>
        <servlet-class>webapp.ControladorProductos</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productos</servlet-name>
        <url-pattern>/productos</url-pattern>
    </servlet-mapping>

    <!--Servlet para actualizar proveedor-->
    <servlet>
        <servlet-name>actualizar_Proveedor</servlet-name>
        <servlet-class>webapp.ActualizarProveedor</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>actualizar_Proveedor</servlet-name>
        <url-pattern>/actualizar_Proveedor</url-pattern>
    </servlet-mapping>

</web-app>